#include <iostream>
using namespace std;

int main () 
{
    int X = 10;            //Numeros inteiros de 16bits. 
    short X2 = 01;         //Também de 16bits, mas economiza + memória.
    long XX = 100;         //Inteiros de 32bits.
    long long XXX = 1000;  //Inteiros de 64bits.
    unsigned int Z = 0;     //Somente valores inteiros positivos e 0. 

    float real1 = 25.07f;          //Numeros reais ~7 digítos a precisão.
    double real11 = 25.074;        //Numeros reais ~15 digítos a precisão. 
    long double real111 = 25.749;  // Mais precisos ainda.

    char caractere = 'K';   // 1 Caractere.
    bool logico = true;   // só recebe verdadeiro ou Falso.

    cout << "Tipo int: " << X << endl;
    cout << "Tipo short: " << X2 << endl;
    cout << "InTipo long: " << XX << endl;
    cout << "Tipo long long:" << XXX << endl;
    cout << "Tipo unsigned int:" << Z << endl;
    cout << "Tipo float:" << real1 << endl;
    cout << "Tipo double:" << real11 << endl;
    cout << "Tipo long double:" << real111 << endl;
    cout << "Tipo char:" << caractere << endl;
    cout << "Tipo bool:" << logico << endl;
    
    retun 0;
}
