#include <iostream>
using namespace std;

int main ( ) {
    const float PI = 3.14159f; 
    float raio;

    // Entrada do raio.
    cout << "Digite o raio do círculo: ";
    cin >> raio;

    // Cálculo da área.
    float area = PI * raio * raio;

    // Saída do raio.
    cout << "A área desse círculo é: " << area << endl;

    return 0;
}
