#include <iostream>
using namespace std;

float maior(float a, float b) {
    if (a > b) {
        return a;
    } else {
        return b;
    }
}

int main() {
    float n1, n2;

    cout << "Digite o primeiro número: ";
    cin >> n1;
    cout << "Digite o segundo número: ";
    cin >> n2;

    float resultado = maior(n1, n2);

    cout << "O maior número é: " << resultado << endl;

    return 0;
}
