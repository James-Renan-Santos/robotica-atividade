#include <iostream>
using namespace std;


void trocar(int &a, int &b) {
    int temp = a;
    a = b;
    b = temp;
}

int main() {
    int x, y;

    cout << "Digite o valor de x: ";
    cin >> x;

    cout << "Digite o valor de y: ";
    cin >> y;

    // Antes da troca.
    cout << "\n Antes da troca:\n";
    cout << "x = " << x << ", y = " << y << endl;

    // Chamada da função
    trocar(x, y);

    // Depois da troca.
    cout << "\n Depois da troca:\n";
    cout << "x = " << x << ", y = " << y << endl;

    return 0;
}
