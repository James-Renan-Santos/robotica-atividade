#include <iostream>
using namespace std;

int main() {
    float nota;
    float* pNota = &nota;  

  
    cout << "Digite a nota do aluno: ";
    cin >> *pNota;

    // Verificação.
    if (*pNota >= 7) {
        cout << "Aluno aprovado!" << endl;
    } else {
        cout << "Aluno reprovado!" << endl;
    }

    return 0;
}
