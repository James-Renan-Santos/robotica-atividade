#include <iostream>
using namespace std;


void mostrarVetor(int* vetor) {
    for (int i = 0; i < 5; i++) {
        cout << "Elemento " << i << ": " << vetor[i] << endl;
    }
}

int main() {
    int numeros[5];

    // Lê os 5 valores do usuário
    cout << "Digite 5 números inteiros: " << endl;
    for (int i = 0; i < 5; i++) {
        cin >> numeros[i];
    }

    // Chama a função passando o vetor (como ponteiro)
    mostrarVetor(numeros);

    return 0;
}
