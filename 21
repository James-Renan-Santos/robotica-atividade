#include <iostream>
using namespace std;


float calcularAreaRetangulo(float base, float altura) {
    return base * altura;
}

int main() {
    float base, altura;

    cout << "Digite a base do retângulo: ";
    cin >> base;
    cout << "Digite a altura do retângulo: ";
    cin >> altura;

    // Chamada da função.
    float area = calcularAreaRetangulo(base, altura);

    cout << "A área do retângulo é: " << area << endl;

    return 0;
}
